{
  "manifest_version": 3,
  "name": "TruckSim Radio",
  "version": "1.0.1",
  "description": "Listen to Euro Truck Simulator 2 and American Truck Simulator radio streams in your browser",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "offscreen"
  ]
}
